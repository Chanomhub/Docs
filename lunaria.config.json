{
    "$schema": "https://lunariajs.io/config.schema.json",
    "repository": {
        "name": "chanomhub/Docs"
    },
    "outDir": "./dist/lunaria",
    "dashboard": {
        "title": "ChanomHub Translation Status",
        "description": "Track the translation status of ChanomHub documentation",
        "site": "https://docs.chanomhub.com/lunaria/"
    },
    "defaultLocale": {
        "label": "ภาษาไทย",
        "lang": "th"
    },
    "locales": [
        {
            "label": "English",
            "lang": "en"
        }
    ],
    "files": [
        {
            "type": "universal",
            "location": "src/content/docs/**/*.{md,mdx}",
            "pattern": "src/content/docs/@lang/@path",
            "ignore": [
                "src/content/docs/en/**/*"
            ]
        }
    ],
    "tracking": {
        "localizableProperty": "i18nReady"
    }
}